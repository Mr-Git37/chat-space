.side-bar
  .side-bar__header
    .sidebar__header__top-items
      .sidebar__header__top-items__name
        = current_user.name
      .sidebar__header__top-items__icons
        =link_to new_group_path ,  class: "Contents__btn Contents__btn--far" do
          = icon('far', 'edit', class: "Contents__btn--edit")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "Contents__btn--cog")
          
  .side-bar__group
    - current_user.groups.each do |group|
      .side-bar__group__list
        = link_to group_messages_path(group.id) do
          .side-bar__group__name
            = group.name
          .side-bar__group__message
            = group.show_last_message